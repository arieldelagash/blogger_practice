<h1><%= @article.title %></h1>
<p><%= @article.body %></p>

<h1> Comments (<%= @article.comments.size %>) </h1>
<%= render partial: "comments/form" %>
<%= render partial: "articles/comment", collection: @article.comments %>
<%= link_to "Back to the Index", articles_path %><br />
<%= link_to "Delete Article", article_path(@article), method: :delete, data: {confirm: "Really delete this Article"}%><br />
<%= link_to "Edit Article", edit_article_path(@article) %>